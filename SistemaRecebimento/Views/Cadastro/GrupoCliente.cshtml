@model List<SistemaRecebimento.Models.GrupoClienteModel>
@{
    ViewBag.Title = "Lista de Usuarios";
    var nivel = " ";
}
<style>
</style>
<div id="tabela">
    <section id="cadastro_cabecalho">
        <h1>@ViewBag.Title</h1>
    </section>
    <div class="box">
        <div id="cabecalho_grid" class="row">
            <div class="col">
                <a id="btn_incluir" class="btn btn-success" role="button"><i class="glyphicon glyphicon-plus"></i> Incluir</a>
            </div>
        </div>
    </div>
    <table class="table">
        <caption>Usuario:</caption>
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Usuario</th>
                <th scope="col">Nivel de Acesso</th>
                <th scope="col">Data Criacao</th>
                <th scope="col">Ação</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Usuario</td>
                    <td>@if (item.Nivel == 1) {
                        nivel = "Administrador";
                    } else if (item.Nivel == 2) {
                        nivel = "Cliente";
                    }
                    @nivel
                    </td>
                    <td> @item.Datacriacao</td>
                    <td>
                        <a class="btn btn-primary btn-alterar" role="button"><i class="glyphicon glyphicon-pencil"></i> Alterar</a>
                        <a class="btn btn-danger btn-excluir" role="button"><i class="glyphicon glyphicon-trash"></i> Excluir</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>